<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.HeritageMapper">

<select id="loadList" resultType="java.util.HashMap">
  select heritagetype, heritagename, address, center from heritage where heritageName like '%'||#{name}||'%' order by length(#{name})
  </select>
  
  <select id="loadOneHeritage" resultType="java.util.HashMap">
  select * from heritage where heritageName = #{name}
  </select>
</mapper>
